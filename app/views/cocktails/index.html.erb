<div class="container">
  <h1>when <i class="fa fa-glass" aria-hidden="true"></i> makes you sleepy, add <i class="fa fa-coffee" aria-hidden="true"></i></h1>
  <%= link_to "add a cocktail", new_cocktail_path, {class: "btn btn-danger drinks_button"} %>
    <div class="row">
      <% @cocktails.each do |c| %>
      <div class="col-xs-12 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= c.name %></h2>
            <p><%= link_to "How To Make", cocktail_path(c), {class: "btn btn-primary btn-sm"} %></p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
        </div>
      </div>
      <% end %>
    </div>
</div>


